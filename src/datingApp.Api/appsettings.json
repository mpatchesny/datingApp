{
  "ConnectionStrings": {
    "datingApp": "Host=localhost;Database=datingapp;Username=postgres;Password="
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "PostgreSQL",
        "Args": {
          "connectionString": "datingApp",
          "tableName": "logs",
          "schemaName": null,
          "needAutoCreateTable": true,
          "loggerColumnOptions": {
            "Id": "IdAutoIncrement",
            "Level": "LevelAsText",
            "TimeStamp": "Timestamp",
            "Properties": "Properties",
            "LogEvent": "LogEvent",
            "Message": "Message",
            "RenderedMessage": "RenderedMessage",
            "Exception": "Exception"
          },
          "period": "0.00:00:30",
          "batchSizeLimit": 50
        }
      }
    ],
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Enrichers.ClientInfo",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.Thread",
      "Serilog.Sinks.PostgreSQL.Alternative"
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId",
      "WithClientIp"
    ]
  },
  "AllowedHosts": "*",
  "app": {
    "name": "DatingApp Api"
  },
  "database": {
    "seedSampleData": true
  },
  "AccessCode": {
    "expiry": "00.00:05:00"
  },
  "ExpiredDataRemover": {
    "LoopDelay": "00.02:00:00"
  },
  "auth": {
    "accessToken": {
      "issuer": "datingapp-issuer",
      "audience": "datingapp-audience",
      "signingKey": "pjvfENxFQ3oVYzGdwfCOQB3ukMWhX5ZhP4Czse6cg72KOKYXUSHBe2DaTbwh",
      "expiry": "00.01:00:00"
    },
    "refreshToken": {
      "issuer": "datingapp-refresh-issuer",
      "audience": "datingapp-refresh-audience",
      "signingKey": "BRVPdU7yfkNDEeWGhTtjBHyHvlmGUXMFQwR3R041ja1MivrHlarXpQrv70y1Oxud",
      "expiry": "90.00:00:00"
    }
  },
  "PaginatedDefaults": {
    "DefaultPageSize": 15,
    "MaxPageSize": 100
  },
  "Storage": {
    "StoragePath": "../../storage"
  },
  "PhotoService": {
    "MinPhotoSizeBytes": 10240,
    "MaxPhotoSizeBytes": 2621440,
    "AcceptedFileFormats": "jpg,png,webp",
    "CompressedImageQuality": 80
  },
  "AccessCodeEmail": {
    "SendFrom": ""
  },
  "AccessCodeSMS": {
    "BodyTemplate": "Your sign-in code for dating app {AccessCode}. Code expires in {ExpirationTime} minutes."
  },
  "EmailSender": {
    "Username": "some username",
    "Password": "some password",
    "ServerAddress": "some server",
    "ServerPort": "587",
    "ClientId": "some client id",
    "TenantId": "some tenant id",
    "ClientSecret": "some secret",
    "DisplayUserName": "DatingApp Notifications"
  }
}