@using datingApp.Infrastructure.Notifications.Views.Emails.AccessCode
@model AccessCodeEmailViewModel
@{
    var title = "AccessCodeEmail";
}

<h1 style="margin: 0 0 10px 0; font-family: sans-serif; font-size: 25px; line-height: 30px; color: #333333; font-weight: normal;">
    Your access code for DatingApp:
</h1>
<br>
<h1 style="margin: 0 0 10px 0; font-family: sans-serif; font-size: 30px; letter-spacing: 5px; line-height: 30px; color: #333333; font-weight: bold;" align="center">
    @Model.AccessCode
</h1>
<br>
<p style="margin: 0;">
    Access code will expire in @Model.ExpirationTime.Minutes.ToString() minutes.
</p>
